<div class="page-header">
  <h1>Listing networks</h1>
</div>

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">Status</li>
</ol>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Ip</th>
      <th class='text-right' width=150>Domains</th>
      <th class='text-right' width=150>Links</th>
      <th width=100></th>
    </tr>
  </thead>

  <tbody>
    <% @subnets.each do |subnet| %>
      <tr>
        <td><%= subnet.ip %></td>
        <td class='text-right'><%= subnet.domains_count %></td>
        <td class='text-right'><%= subnet.links_count %></td>
        <td class='text-right'><%= link_to ' ', subnet, class: 'btn btn-default btn-sm glyphicon glyphicon-eye-open' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @subnets %>