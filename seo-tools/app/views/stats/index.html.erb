<div class="page-header">
  <h1>Stats Listing</h1>
</div>

<ol class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li class="active">Stats</li>
</ol>

<table class='table table-striped table-hover'>
  <thead>
  <tr>
    <th width=150>Day</th>
    <th width=150>Status</th>
    <th width=150 class='text-right'>Number</th>
  </tr>
  </thead>

  <tbody>
  <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.day %></td>
        <td class='<%= stat.status.style.gsub('btn-', '') if stat.status %>'><%= stat.status.name %></td>
        <td class='<%= stat.status.style.gsub('btn-', '') if stat.status %> text-right'><%= stat.number %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @stats %>